@using PrestamoBlazorApp.Shared.MudUtils;
@inherits LayoutComponentBase


<MudThemeProvider Theme="_currentTheme" />
<MudSnackbarProvider />

<MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-center" Style="height: 100vh;">
    <div class="d-flex flex-column mud-width-full">
        <MudPaper Elevation="25" Class="pa-8" Width="100%" MaxWidth="500px" >
            <MudGrid>
                <MudItem sm="12" lg="12" md="12" Style="display:flex;justify-content:center">
                    <img src="images/logo2.jpg.jpeg" style="width:200px; height:200px; border-radius:50%;" />
                </MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem sm="12" md="12" lg="12">
                    @Body
                </MudItem>
            </MudGrid>
        </MudPaper>
        <MudGrid>
            <MudItem sm="12" md="12" lg="12" Style="display:flex;justify-content:flex-start">
                <MudAlert Severity="Severity.Info" Class="mt-8 mud-width-full" Style="max-width:500px;">Developed By PCP</MudAlert>
            </MudItem>
        </MudGrid>
    </div>
</MudContainer>

@code { private MudTheme _currentTheme = new MudBlazorAdminDashboard(); }