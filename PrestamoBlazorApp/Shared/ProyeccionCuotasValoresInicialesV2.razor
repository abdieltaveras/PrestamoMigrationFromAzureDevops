@page "/Cuotasgeneradas"    
@inherits BaseForList
@using PrestamoBlazorApp.Shared.Components.Forms
<MudDialog>
    <DialogContent>
        <MudTable Items="@Cuotas" Dense="true" Hover="true" FixedHeader="true" FixedFooter="false" Height="200px">
            <HeaderContent>
                <MudTh>No</MudTh>
                <MudTh>Fecha</MudTh>
                <MudTh>Total</MudTh>
                <MudTh>Capital</MudTh>
                <MudTh>Interes</MudTh>
                <MudTh>Gastos Cierre</MudTh>
                <MudTh>Int G/C</MudTh>
                <MudTh>Otros Gastos</MudTh>
                <MudTh>Int O/C</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Nr">@context.Numero</MudTd>
                <MudTd DataLabel="Sign">@context.Fecha.ToString("dd/MM/yyyy")</MudTd>
                <MudTd DataLabel="Name">@context.TotalOrig</MudTd>
                <MudTd DataLabel="Name">@context.Capital</MudTd>
                <MudTd DataLabel="Name">@context.Interes</MudTd>
                <MudTd DataLabel="Name">@context.GastoDeCierre</MudTd>
                <MudTd DataLabel="Name">@context.BceInteresDelGastoDeCierre</MudTd>
                <MudTd DataLabel="Name">@context.OtrosCargos</MudTd>
                <MudTd DataLabel="Name">@context.InteresOtrosCargos</MudTd>
            </RowTemplate>
        </MudTable>
    </DialogContent>
</MudDialog>
 
