@inherits BaseForCreateOrEdit 
<EditForm Model="EntidadEstatus" OnValidSubmit="Save">
    <MudDialog>
        <DialogContent>
            <MudTextField @bind-Value="EntidadEstatus.Name" Label="Nombre" T="string" InputMode="InputMode.text" Immediate="true">></MudTextField>
            <MudTextField @bind-Value="EntidadEstatus.Description" Label="Descripcion" T="string" InputMode="InputMode.text" Immediate="true"></MudTextField>
            <MudCheckBox @bind-Checked="EntidadEstatus.IsNotPrintOnReport" Label="No Imprimir Reportes"></MudCheckBox>
            <MudCheckBox @bind-Checked="EntidadEstatus.IsImpedirHacerPrestamo" Label="Impedir hacer prestamos"></MudCheckBox>
            <MudCheckBox @bind-Checked="EntidadEstatus.IsImpedirPagoEnCaja" Label="Imprimir en caja"></MudCheckBox>
            <MudCheckBox @bind-Checked="EntidadEstatus.IsRequiereAutorizacionEnCaja" Label="Requiere autorizacion en caja"></MudCheckBox>
            <MudCheckBox @bind-Checked="EntidadEstatus.IsActivo" Label="Activo?"></MudCheckBox>





        </DialogContent>
        <DialogActions>
            <MudButton ButtonType="ButtonType.Submit">Guardar</MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>


