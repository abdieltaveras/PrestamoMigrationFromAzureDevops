
@if (estatusesCliente.Count() > 0)
{
    <MudTable Items="@estatusesCliente" 
              Hover="true" 
              Breakpoint="Breakpoint.Sm" 
              >
        <HeaderContent>
            <MudTh>Estatus</MudTh>
            <MudTh>Accion</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Nr">@context.EstatusName</MudTd>
            <MudTd DataLabel="Sign">
                <MudButton Color="MudBlazor.Color.Error">Eliminar</MudButton>
            </MudTd>
        </RowTemplate>
    </MudTable>

}
else
{
    <MudText>Sin estatus asignado.</MudText>
}
