
@if (estatusesCliente.Count() > 0)
{
    <MudTable Items="@estatusesCliente"
              Hover="true"
              Breakpoint="Breakpoint.Sm">
        <HeaderContent>
            <MudTh>Estatus</MudTh>
            @if (AllowActions)
            {
                <MudTh>Accion</MudTh>
            }
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Nombre">@context.EstatusName</MudTd>
            @if (AllowActions)
            {
                <MudTd DataLabel="Accion">
                    <MudButton Color="MudBlazor.Color.Error">Eliminar</MudButton>
                </MudTd>
            }
          
        </RowTemplate>
    </MudTable>

}
else if (estatusesPrestamo.Count() > 0)
{
    <MudTable Items="@estatusesPrestamo"
              Hover="true"
              Breakpoint="Breakpoint.Sm">
        <HeaderContent>
            <MudTh>Estatus</MudTh>
            @if (AllowActions)
            {
                <MudTh>Accion</MudTh>
            }
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Nombre">@context.EstatusName</MudTd>
            @if (AllowActions)
            {
                <MudTd DataLabel="Accion">
                    <MudButton Color="MudBlazor.Color.Error">Eliminar</MudButton>
                </MudTd>
            }
     
        </RowTemplate>
    </MudTable>

}
else
{
<MudText>Sin estatus asignado.</MudText>
}
