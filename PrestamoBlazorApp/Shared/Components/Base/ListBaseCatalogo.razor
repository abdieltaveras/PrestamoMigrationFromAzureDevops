
<MudElement>
    <MudElement>
        <MudToolBar>
            <MudSpacer />
            @foreach (var btn in ToolbarButtons)
            {
                <MudButton Class="mr-3"
                           OnClick="@(()=>btn.OnClick(selectedItem))"
                           Variant="Variant.Filled"
                           StartIcon="@btn.Icon"
                           Color="@btn.Color"
                           Disabled="@(!btn.IsEnabled(selectedItem))">
                    @btn.Text
                </MudButton>
            }
        </MudToolBar>
    </MudElement>
    <MudText Align="Align.Right">
        Selección: @selectedItem?.ToString()
    </MudText>
    <MudTable Items="Items" MultiSelection="@allowMultiSelection" Outlined="@Outlined" Dense="@Dense" Hover="@Hover" Bordered="@Bordered" Striped="@Striped"
              @bind-SelectedItem="selectedItem" Filter="new Func<Catalogo, bool>(FilterFunc)" @bind-SelectedItems="@selectedItems">
        <ToolBarContent>
            <MudText Typo="Typo.h6">@Title</MudText>
            <MudSpacer />
            <MudTextField @bind-Value="SearchValue" Placeholder="@SearchPlaceHolder" Adornment="Adornment.Start" Immediate="@Immediate" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
        </ToolBarContent>
        <HeaderContent>
            @TableHeaderFragment
        </HeaderContent>
        <RowTemplate Context="Catalogo">
            @RowTemplate(Catalogo)
        </RowTemplate>
        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>

</MudElement>
