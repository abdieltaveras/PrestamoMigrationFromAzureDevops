@typeparam TItem
    <MudItem>
        <MudToolBar Class="pt-0">
            <MudSpacer />
            @foreach (var btn in  ToolbarButtons)
            {
                if (btn.Show)
                {
                    <MudButton Class="mr-3"
                               OnClick="@(() => btn.OnClick(SelectedItem))"
                               Variant="Variant.Filled"
                               StartIcon="@btn.Icon"
                               Color="@btn.Color"
                               Disabled="@(!btn.IsEnabled(SelectedItem))">
                        @btn.Text
                    </MudButton>
                }
            }
        </MudToolBar>

    <MudText Align="Align.Right">
        Seleccion:  <MudHighlighter Text="@SelectedItemText" HighlightedText="@SelectedItemText"/>
    </MudText>
    @*@ChildContent*@
</MudItem>
