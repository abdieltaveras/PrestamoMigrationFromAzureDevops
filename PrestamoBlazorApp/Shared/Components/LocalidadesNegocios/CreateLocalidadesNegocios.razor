@inherits BaseForCreateOrEdit
<EditForm Model="@LocalidadNegocio" OnValidSubmit="@SaveLocalidadNegocio" OnInvalidSubmit="HandleInvalidSubmit">
    <MudCard>
        <MudCardHeader Class="d-flex justify-end">
            <CardHeaderActions>
                <MudButton ButtonType="ButtonType.Submit" Color="MudBlazor.Color.Primary" Variant="Variant.Filled"> Guardar</MudButton>
            </CardHeaderActions>
        </MudCardHeader>
        <MudCardContent>

            <ObjectGraphDataAnnotationsValidator />
            <MudGrid>
                <MudItem md="6" lg="5">
                    <MudTextField Label="Nombre Juridico" @bind-Value="LocalidadNegocio.NombreJuridico"
                                  For="()=>LocalidadNegocio.NombreJuridico"></MudTextField>
                    <MudTextField Label="Nombre Comercial" @bind-Value="LocalidadNegocio.NombreComercial"
                                  For="()=>LocalidadNegocio.NombreComercial"></MudTextField>
                    <MudTextField Label="Prefijo Prestamo" @bind-Value="LocalidadNegocio.PrefijoPrestamo"
                                  For="()=>LocalidadNegocio.PrefijoPrestamo" MaxLength="3"></MudTextField>
                    <MudTextField Label="Prefijo Transacciones" @bind-Value="LocalidadNegocio.PrefijoTransacciones"
                                  InputType="InputType.Number"
                                  For="()=>LocalidadNegocio.PrefijoTransacciones" MaxLength="3"></MudTextField>
                    <MudTextField Label="Tax ID Nacional" @bind-Value="LocalidadNegocio.TaxIdNacional"
                    InputType="InputType.Number"
                                  For="()=>LocalidadNegocio.TaxIdNacional"></MudTextField>
                    <MudTextField Label="Tax ID Localidad" @bind-Value="LocalidadNegocio.TaxIdLocalidad"
                                  For="()=>LocalidadNegocio.TaxIdLocalidad"></MudTextField>
                </MudItem>
                <MudItem md="4" lg="4">
                    <MudCheckBox @bind-Checked="LocalidadNegocio.Activo" Label="Activo"></MudCheckBox>
                    <MudCheckBox @bind-Checked="LocalidadNegocio.Bloqueado" Label="Bloqueado"></MudCheckBox>
                    <MudCheckBox @bind-Checked="LocalidadNegocio.PermitirOperaciones" Label="Permitir Operaciones"></MudCheckBox>
                </MudItem>
            </MudGrid>
            <MudDivider />
            <MudGrid>
                <MudItem md="7" lg="6">
                    <MudTextField Label="Slogan" @bind-Value="LocalidadNegocio.OtrosDetallesObj.Slogan"
                                  For="()=>LocalidadNegocio.OtrosDetallesObj.Slogan"></MudTextField>
                    <MudTextField Label="Direccion" @bind-Value="LocalidadNegocio.OtrosDetallesObj.Direccion"
                                  For="()=>LocalidadNegocio.OtrosDetallesObj.Direccion"></MudTextField>
                    <MudTextField Label="Calle" @bind-Value="LocalidadNegocio.OtrosDetallesObj.Calle"
                                  For="()=>LocalidadNegocio.OtrosDetallesObj.Calle"></MudTextField>
                    <MudTextField Label="Correo Electronico" @bind-Value="LocalidadNegocio.OtrosDetallesObj.CorreoElectronico"
                                  For="()=>LocalidadNegocio.OtrosDetallesObj.CorreoElectronico"></MudTextField>
                    <MudTextField Label="Telefono 1" @bind-Value="LocalidadNegocio.OtrosDetallesObj.Telefono1"
                                  For="()=>LocalidadNegocio.OtrosDetallesObj.Telefono1"></MudTextField>
                    <MudTextField Label="Telefono 2" @bind-Value="LocalidadNegocio.OtrosDetallesObj.Telefono2"
                                  For="()=>LocalidadNegocio.OtrosDetallesObj.Telefono2"></MudTextField>
                </MudItem>
            </MudGrid>
        </MudCardContent>
    </MudCard>
</EditForm>


