<h3> Datos empresa o negocio donde labora</h3>
<div class="col-sm-6">
    <div class="form-group row">
        <label class="col-sm-3 col-form-label text-label-align">Nombre</label>
        <InputText @bind-Value=@infoLaboral.Nombre class="col-sm-8" />
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label text-label-align">Direccion</label>
        <InputText @bind-Value=@infoLaboral.Direccion class="col-sm-8" />
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label text-label-align">Puesto</label>
        <InputText @bind-Value=@infoLaboral.Puesto class="col-sm-8" />
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label text-label-align">Telefono 1</label>
        <InputText @bind-Value="infoLaboral.NoTelefono1" class="col-sm-8 masked" data-inputmask="'mask': '(999)-999-9999'" />
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label text-label-align">Telefono 2</label>
        <InputText @bind-Value="infoLaboral.NoTelefono2" class="col-sm-8 masked"  data-inputmask="'mask': '(999)-999-9999'"/>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label text-label-align">Otros detalles</label>
        <InputTextArea @bind-Value="infoLaboral.Notas" class="col-sm-8" />
    </div>
</div>
@code {
    [Parameter]
    public InfoLaboral infoLaboral { get; set; }


    [Inject]
    IJSRuntime jsRuntime { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
