<MudDialog> 
    <DialogContent>
        @Content
    </DialogContent>
    <DialogActions>
        @if (ShowGuardar) 
        { 
         <MudButton OnClick="OnSaveClick">Guardar</MudButton>
        }
    </DialogActions>
</MudDialog>
@code {


        [Parameter]
        public RenderFragment? Content { get; set; }
        [Parameter]
        public EventCallback<MouseEventArgs> OnSaveClick { get; set; }
        [Parameter]
        public bool ShowGuardar { get; set; } = true;
}
