    <div class="row">
        <div class="col-sm-6">
            <h2> Datos del conyuge</h2>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label text-label-align">Nombres</label>
                <InputText id="conyugeNombre" @bind-Value=@conyuge.Nombres class="col-sm-8" required />
                <ValidationMessage For="@(()=>conyuge.Nombres)" />
            </div>

            <div class="form-group row">
                <label class="col-sm-3 col-form-label text-label-align">Apellidos</label>
                <InputText @bind-Value=@conyuge.Apellidos class="col-sm-8" />
            </div>


            <div class="form-group row">

                <label class="col-sm-3 col-form-label text-label-align">Apodo</label>
                <InputText @bind-Value=@conyuge.Apodo class="col-sm-8" />
            </div>

            <div class="form-group row">
                <label for="tiposIdentificacionPersonas" class="col-sm-3 col-form-label text-label-align"> Tipo Identif</label>
                <InputSelect id="tiposIdentificacion" @bind-Value="conyuge.IdTipoIdentificacion" class="form-control col-sm-3">
                    @foreach (var item in EnumToList.GetEnumTiposIdentificacionPersona())
                    {
                        <option value=@item.Value>@item.Text</option>
                    }
                </InputSelect>
                <label for="noIdentificacion" class="col-sm-2 col-form-label text-label-align">Numeracion </label>
                <InputText placeholder="000-0000000-0" @bind-Value="conyuge.NoIdentificacion " class="col-sm-3  masked" data-inputmask="'mask': '999-9999999-9'" />
            </div>

            <div class="form-group row">
                <label class="col-sm-3 col-form-label text-label-align">Telefono 1</label>
                <input type="Text" @bind-value="@conyuge.NoTelefono1" class="col-sm-8 masked" data-inputmask="'mask': '(999)-999-9999'" />
            </div>

            <div class="form-group row">
                <label class="col-sm-3 col-form-label text-label-align">Donde Labora</label>
                <input type="text" @bind-value="@conyuge.LugarTrabajo" class="col-sm-8 m-0" />
            </div>

            <div class="form-group row">
                <label class="col-sm-3 col-form-label text-label-align">Direccion Empresa</label>
                <input type="text" @bind-value="@conyuge.DireccionLugarTrabajo" class="col-sm-8" />
            </div>

            <div class="form-group row">
                <label class="col-sm-3 col-form-label text-label-align">Telefono Trabajo</label>
                <input type="Text" @bind-value="@conyuge.TelefonoTrabajo" class="col-sm-8 masked" data-inputmask="'mask': '(999)-999-9999'" />
            </div>
        </div>
    </div>

@code {

    [Parameter]
    public Conyuge conyuge { get; set; }

    [Inject]
    IJSRuntime jsRuntime { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await JsInteropUtils.SetInputMask(jsRuntime);
    }
}

