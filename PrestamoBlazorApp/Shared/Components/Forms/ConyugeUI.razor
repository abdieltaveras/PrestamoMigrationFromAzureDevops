<MudTextField Label="Nombre" @bind-Value="conyuge.Nombres" Validation="@conyuge.Nombres"></MudTextField>
<MudTextField Label="Apellidos" @bind-Value="conyuge.Apellidos" Validation="@conyuge.Apellidos"></MudTextField>
<MudTextField Label="Apodo" @bind-Value="conyuge.Apodo" Validation="@conyuge.Apodo"></MudTextField>
<MudSelect @bind-Value="conyuge.IdTipoIdentificacion" Label="Tipo Identificacion">
    @foreach (var item in EnumToList.GetEnumTiposIdentificacionPersona())
    {
        <MudSelectItem Value="@item.Value">@item.Text</MudSelectItem>
    }
</MudSelect>
@if (conyuge.IdTipoIdentificacion == (int)TiposIdentificacionPersona.Cedula)
{
    <MudTextField @bind-Value="conyuge.NoIdentificacion" Label="Cedula"></MudTextField>
}
else
{
    <MudTextField @bind-Value="conyuge.NoIdentificacion" Label="Otro"></MudTextField>
}
<MudTextField Label="Telefono personal" @bind-Value="conyuge.TelefonoPersonal" Validation="@conyuge.TelefonoPersonal"></MudTextField>
<MudTextField Label="Lugar donde trabaja" @bind-Value="conyuge.LugarTrabajo" Validation="@conyuge.LugarTrabajo"></MudTextField>
<MudTextField Label="Direccion del trabajo" @bind-Value="conyuge.DireccionLugarTrabajo" Validation="@conyuge.DireccionLugarTrabajo"></MudTextField>
<MudTextField Label="Telefono del trabajo" @bind-Value="conyuge.TelefonoTrabajo" Validation="@conyuge.TelefonoTrabajo"></MudTextField>
<MudTextField Label="Otros detalles" @bind-Value="conyuge.Notas" Validation="@conyuge.TelefonoTrabajo"></MudTextField>

@code {

    [Parameter]
    public Conyuge conyuge { get; set; }

    [Inject]
    IJSRuntime jsRuntime { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        //await JsInteropUtils.SetInputMask(jsRuntime);
    }
}

