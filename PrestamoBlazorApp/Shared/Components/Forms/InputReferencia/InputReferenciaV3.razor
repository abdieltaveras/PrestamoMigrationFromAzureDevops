@using PrestamoBlazorApp.Shared.Components.Forms
<MudDialog Style="max-height: 400px; overflow-y: scroll;">
    <DialogContent>
        @if (Referencias != null)
        {
            @for (int i = 0; i < Referencias.Count; i++)
            {
                <InputReferenciaItem referencia="@Referencias[i]" />
                @if (Referencias.Count() == (i + 1))
                {
                    <MudGrid>
                        <MudItem>
                            <MudButton OnClick="()=>AddNewReferencia()" Color="@MudBlazor.Color.Primary">Agregar</MudButton>
                            <MudButton OnClick="()=>RemoveReferencia(Referencias[i-1])" Color="@MudBlazor.Color.Error">Eliminar</MudButton>
                        </MudItem>
                    </MudGrid>
                }

            }

            if (Referencias.Count() <= 0)
            {
                <MudButton OnClick="()=>AddNewReferencia()" Color="@MudBlazor.Color.Primary">Agregar Referencia</MudButton>
            }
        }
    </DialogContent>
</MudDialog>



@code {

    @*[Parameter]
        public Referencias[i] Referencias[i] { get; set; } = new Referencias[i]();*@





}
