@inherits BaseForCreateOrEdit
<MudDialog>
    <DialogContent>
        <MudGrid>
            <MudItem md="4" lg="4" xs="12" sm="12">
                <MudSelect T="int" @bind-Value="SelectedPropertySearch" Label="Buscar Por...">
                    @foreach (var item in EnumToList.TipoBusquedaGarantia())
                    {
                        <MudSelectItem Value="@item.Value">@item.Text</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem md="7" lg="7" xs="12" sm="12">
                @*<MudNumericField T="int" @bind-Value="GetParams.IdPrestamo" Label="Buscar..."></MudNumericField>*@
                <MudTextField @bind-Value="SearchText" Label="Buscar..."></MudTextField>


                <MudItem md="1" lg="1" xs="12" sm="12">
                    <MudButton OnClick="onSearchClick">Buscar</MudButton>
                </MudItem>
            </MudItem>
      
        </MudGrid>
        <MudGrid>
            <MudItem md="12" lg="12" xs="12">
                @if (garantias.Count() > 0)
                {
                    <MudTable Items="@garantias" Hover="true" Breakpoint="Breakpoint.Sm" Height="300px">
                        <HeaderContent>
                            <MudTh>Identificacion</MudTh>
                            <MudTh>Marca</MudTh>
                            <MudTh>Modelo</MudTh>

                            <MudTh>Seleccionar</MudTh>
                        </HeaderContent>
                        <RowTemplate>
                            <MudTd DataLabel="Identificacion">@context.NoIdentificacion</MudTd>
                            <MudTd DataLabel="Marca">@context.NombreMarca</MudTd>
                            <MudTd DataLabel="Modelo">@context.NombreModelo</MudTd>

                            <MudTd>
                                <MudIconButton Icon="@Icons.Filled.ArrowRight" OnClick="()=>SelectedValue(context)" />
                            </MudTd>
                        </RowTemplate>
                    </MudTable>
                }

            </MudItem>
        </MudGrid>

    </DialogContent>
    <DialogActions>

    </DialogActions>
</MudDialog>

