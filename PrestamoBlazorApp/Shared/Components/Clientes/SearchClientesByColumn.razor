@inherits BaseForCreateOrEdit
<MudDialog>
    <DialogContent>
        <MudGrid>
            <MudItem md="4" lg="4" xs="12" sm="12">
                <MudSelect T="string" @bind-Value="SelectedColumn" Label="Buscar Por...">
                    @foreach (var item in Columns)
                    {
                        <MudSelectItem Value="item">@item</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem md="7" lg="7" xs="12" sm="12">
                <MudTextField @bind-Value="SearchText" Label="Buscar..."></MudTextField>
            </MudItem>
            <MudItem md="1" lg="1" xs="12" sm="12">
                <MudButton OnClick="onSearchClick">Buscar</MudButton>
            </MudItem>
        </MudGrid>
        <MudGrid>
            <MudItem md="12" lg="12" xs="12">
                <MudTable Items="@clientes" Hover="true" Breakpoint="Breakpoint.Sm">
                    <HeaderContent>
                        <MudTh>Identificacion</MudTh>
                        <MudTh>Nombre</MudTh>
                        <MudTh>Seleccionar</MudTh>
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd DataLabel="Identificacion">@context.NoIdentificacion</MudTd>
                        <MudTd DataLabel="Nombre Completo">@context.NombreCompleto</MudTd>
                        <MudTd>
                            <MudIconButton Icon="@Icons.Filled.Add" OnClick="()=>SelectClient(context)" />
                        </MudTd>
                    </RowTemplate>
                </MudTable>
            </MudItem>
        </MudGrid>

    </DialogContent>
    <DialogActions>

    </DialogActions>
</MudDialog>

