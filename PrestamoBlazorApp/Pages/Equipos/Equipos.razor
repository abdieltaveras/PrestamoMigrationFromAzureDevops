@page "/equipos"


<h1>Equipos  <button class="btn btn-primary" @onclick="()=>CreateOrEdit()">Agregar</button></h1>
<div class="modal fade" id="ModalCreateOrEdit" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                @if (Equipo.IdEquipo > 0)
                {
                    <h5 class="modal-title" id="edtMarcaTitel">Editar Equipo</h5>
                }
                else
                {
                    <h5 class="modal-title" id="edtMarcaTitel">Crear Equipo</h5>
                }

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="col-md-12">
                <EditForm Model="@Equipo" OnValidSubmit="SaveEquipo" OnInvalidSubmit="RaiseInvalidSubmit">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="codigo">Codigo</label>
                                <InputText id="codigo" class="form-control col-md-4" @bind-Value="Equipo.Codigo"></InputText>
                            </div>

                            <div class="form-group">
                                <label for="nombre">Nombre</label>
                                <InputText id="nombre" class="form-control col-md-6" @bind-Value="Equipo.Nombre"></InputText>
                            </div>
                            <div class="form-group">
                                <label for="descripcion">Descripcion</label>
                                <InputText id="descripcion" class="form-control col-md-4" @bind-Value="Equipo.Descripcion"></InputText>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary" @onclick="()=>SaveEquipo()">Guardar</button>
                            </div>
                        </div>
                    </div>
                </EditForm>
            </div>

        </div>
    </div>
</div>



@if (loading)
{
    <div class="loader">Cargando datos, espere...</div>
}



<table class="table table-responsive-md table-hover">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Operacion</th>
        </tr>
    </thead>
    <tbody>
        @if (equipos.Count() > 0)
        {
            @foreach (var item in equipos)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td> <button @onclick="()=>CreateOrEdit(item.IdEquipo)" class="btn btn-info"> Editar </button></td>
                </tr>

            }
        }
        else
        {
            <tr>
                <td>Cargando datos ejecute una busqueda</td>
            </tr>

        }
    </tbody>
</table>
