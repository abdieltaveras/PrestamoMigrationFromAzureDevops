@page "/marcas"
@inherits BaseForList
@using PrestamoBlazorApp.Shared.Components.Catalogos


<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h4" xs="1"> Listado De Marcas</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudButton Variant="Variant.Filled" Color="MudBlazor.Color.Primary" DisableElevation="true" OnClick="@(()=>CreateOrEdit(new Marca()))">Agregar</MudButton>
            @*<MudMenu Label="Reportes">
            <MudMenuItem OnClick="()=>PrintListado(1)"> Pdf </MudMenuItem>
            <MudMenuItem OnClick="()=>PrintListado(2)"> Excel</MudMenuItem>
            </MudMenu>*@
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent>
        <MudTable Items="@marcas" Dense="@Dense" Hover="@Hover" Bordered="@Bordered" Striped="@Striped" 
            Filter="new Func<Marca,bool>(FilterFunc1)" @bind-SelectedItem="SelectedItem1">
            <ToolBarContent>
                <MudText Typo="Typo.h6">Elementos</MudText>
                <MudTextField Immediate="true" @bind-Value="SearchString1" Placeholder="Search" 
                Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Codigo</MudTh>
                <MudTh>Nombre</MudTh>
                <MudTh>Acciones</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Codigo">@context.Codigo</MudTd>
                <MudTd DataLabel="Nombre">@context.Nombre</MudTd>

                <MudTd>
                    <MudIconButton OnClick="@(()=>CreateOrEdit(context))" Icon="@Icons.Material.Outlined.Edit"></MudIconButton>
                    <MudIconButton OnClick="@(()=>ShowModelos(context))" Icon="@Icons.Material.Outlined.CardTravel"></MudIconButton>

                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </MudCardContent>
</MudCard>
