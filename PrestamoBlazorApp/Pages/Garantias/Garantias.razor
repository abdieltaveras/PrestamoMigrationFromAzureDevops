@page "/garantias"
@inherits BaseForList
@using PrestamoBlazorApp.Shared.Components.Forms



<GeneralList CardTitle="Lista De Garantias"
             LinkAddButton="garantias/createoredit/"
             ShowSearchOption="false">
    <ActionsButtons>
        @*<MudIconButton Icon="@Icons.Material.Filled.Print" OnClick="()=>ShowReportGenerator()"></MudIconButton>*@
    </ActionsButtons>
    <CardContent>
        <MudTable Loading="LoadingTable" Items="@garantias" 
                  Dense="@Dense" Hover="@Hover" Bordered="@Bordered" 
                  Striped="@Striped" >
            <ToolBarContent>
                <MudText Typo="Typo.h6">Elementos</MudText>
                @*<MudTextField Immediate="true" @bind-Value="SearchStringTable" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>*@
                <MudDivider FlexItem="true" Vertical="true" DividerType="DividerType.Middle" Class="ml-1 mr-1 my-1"></MudDivider>
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Id</MudTh>
                <MudTh>Identificacion</MudTh>

                <MudTh>Acciones</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Codigo">@context.IdGarantia</MudTd>
                <MudTd DataLabel="Nombre">@context.NoIdentificacion</MudTd>
   
                <MudTd>
                    <MudIconButton OnClick='()=>OnEditClick("garantias/createoredit/" + context.IdGarantia.ToString())' Icon="@Icons.Material.Outlined.Edit"></MudIconButton>
                    <MudMenu Icon="@Icons.Material.Filled.Print">
                        <MudMenuItem OnClick="()=>PrintFicha(context.IdGarantia,1)">PDF</MudMenuItem>
                        <MudMenuItem OnClick="()=>PrintFicha(context.IdGarantia,2)">EXCEL</MudMenuItem>
                    </MudMenu>
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </CardContent>
</GeneralList>

