@page "/modelos"


<h2>Modelos</h2>


<button class="btn btn-primary" @onclick="GetModelosByParam">Get By Param</button>
<button class="btn btn-primary" @onclick="GetAll">Get All</button>
<button class="btn btn-primary" @onclick="Clear">Limpiar lista</button>

<EditForm Model="@Modelo" OnValidSubmit="SaveModelo" OnInvalidSubmit="RaiseInvalidSubmit">

    <div class="form-group">
        <label for="codigo">Codigo</label>
        <InputText id="codigo" class="form-control col-md-2" @bind-Value="Modelo.Codigo"></InputText>
    </div>
    <div class="form-group">
        <label for="nombre">Nombre</label>
        <InputText id="nombre" class="form-control col-md-4" @bind-Value="Modelo.Nombre"></InputText>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Guardar" />
    </div>


</EditForm>


@if (loading)
{
    <div class="loader">Cargando datos, espere...</div>
}


<table class="table table-responsive-md table-hover">
    <thead>
        <tr>
            <th>IdModelo</th>
            <th>Nombre</th>
        </tr>
    </thead>
    <tbody>
        @if (modelos.Count() > 0)
        {
            @foreach (var item in modelos)
            {
                <tr>
                    <td>@item.IdModelo</td>
                    <td>@item.Nombre</td>
                </tr>
            }

        }
        else
        {
            <tr>
                <td>Cargando datos ejecute una busqueda</td>
            </tr>
        }
    </tbody>
</table>
