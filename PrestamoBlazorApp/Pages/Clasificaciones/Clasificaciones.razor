@page "/clasificaciones"

<h1>Clasificaciones  <button class="btn btn-primary" @onclick="()=>CreateOrEdit()">Agregar</button></h1>


<!--<button class="btn btn-primary" @onclick="GetClasificaciones">Get By Param</button>-->
@*<button class="btn btn-primary" @onclick="GetAll">Get All</button>*@
<!--<button class="btn btn-primary" @onclick="Clear">Limpiar lista</button>-->

<div class="modal fade" id="ModalCreateOrEdit" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                @if (Clasificacion.IdClasificacion > 0)
                {
                    <h5 class="modal-title" id="edtMarcaTitel">Editar Marca</h5>
                }
                else
                {
                    <h5 class="modal-title" id="edtMarcaTitel">Crear Marca</h5>
                }

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="col-md-12">
                <EditForm autocomplete="off" Model="@Clasificacion" OnValidSubmit="SaveClasificacion" OnInvalidSubmit="RaiseInvalidSubmit">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="codigo">Codigo</label>
                                <InputText id="codigo" class="form-control col-md-4" @bind-Value="Clasificacion.Codigo"></InputText>
                            </div>
                            <div class="form-group">
                                <label for="nombre">Nombre</label>
                                <InputText id="nombre" class="form-control col-md-6" @bind-Value="Clasificacion.Nombre"></InputText>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary" @onclick="()=>SaveClasificacion()">Guardar</button>
                            </div>
                        </div>
                    </div>
                </EditForm>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="search float-right">
            <EditForm autocomplete="off" Model="@SearchClasificacion" OnValidSubmit="@GetClasificaciones">
                <DataAnnotationsValidator />
                <ValidationSummary />
                    <div class="input-group">
                        <InputText id="nombres" @bind-Value="SearchClasificacion.Nombre" placeholder="Nombre" class="form-control" />
                        <span>
                            <button type="submit" class="btn btn-info">Buscar</button>
                        </span>
                    </div>
                @*<div></div>
                @if (clasificaciones.Count() > 0)
                {
                    <label>Total de Datos encontrados para su peticion @clasificaciones.Count().ToString()</label>
                }*@

            </EditForm>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-responsive-md table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Operacion</th>
                </tr>
            </thead>
            <tbody>
                @if (clasificaciones.Count() > 0)
                {
                    @foreach (var item in clasificaciones)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td> <button @onclick="()=>CreateOrEdit(item.IdClasificacion)" class="btn btn-info"> Editar </button></td>
                        </tr>

                    }
                }
                else
                {
                    <p> no existen datos</p>

                }
            </tbody>
        </table>
    </div>
</div>

