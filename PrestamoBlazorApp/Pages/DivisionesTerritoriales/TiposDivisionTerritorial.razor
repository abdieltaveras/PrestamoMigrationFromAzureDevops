@page "/TiposDivisionTerritorial"
@inherits BaseForList
<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h4" xs="1"> Tipos Divisiones Territoriales</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudButton Variant="Variant.Filled" Color="MudBlazor.Color.Primary" DisableElevation="true" OnClick="@(()=>CreateOrEdit(-1))">Agregar</MudButton>
            @*<MudMenu Label="Reportes">
                    <MudMenuItem OnClick="()=>PrintListado(1)"> Pdf </MudMenuItem>
                    <MudMenuItem OnClick="()=>PrintListado(2)"> Excel</MudMenuItem>
                </MudMenu>*@
        </CardHeaderActions>
    </MudCardHeader>

    <MudCardContent>
        <MudTable Items="@TiposTerritorios" Dense="@Dense" Hover="@Hover" Bordered="@Bordered" Striped="@Striped" Filter="new Func<DivisionTerritorial,bool>(FilterFunc)" >
            <ToolBarContent>
                <MudText Typo="Typo.h6">filtrar datos</MudText>
                <MudTextField Immediate="true" @bind-Value="SearchStringTable" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Nombre</MudTh>
                <MudTh>Acciones</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Nombre">@context.Nombre</MudTd>
                <MudTd>
                    @if (context.Activo)
                    {
                        <MudChip Color="MudBlazor.Color.Success">Activo</MudChip>
                    }
                    else
                    {
                        <MudChip Color="MudBlazor.Color.Error">Inactivo</MudChip>
                    }
                </MudTd>
                
                <MudTd>
                    <MudIconButton OnClick="@(()=>CreateOrEdit(context.IdDivisionTerritorial))" Icon="@Icons.Material.Outlined.Edit" Title="Editar La Division"></MudIconButton>
                    <MudIconButton OnClick="@(()=>CreateOrEditComponents(context.IdDivisionTerritorial))" Icon="@Icons.Material.Outlined.LocationCity" Title="Editar Componentes"></MudIconButton>
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </MudCardContent>
</MudCard>



