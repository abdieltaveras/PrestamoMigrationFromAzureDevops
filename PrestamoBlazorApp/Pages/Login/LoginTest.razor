@page "/loginV2"
@page "/Testlogin"
@inherits BaseForCreateOrEdit
@using System.ComponentModel.DataAnnotations
@using PrestamoBlazorApp.Pages.Login

<EditForm Model="@users">
<DataAnnotationsValidator/>
<ValidationSummary />
    <MudGrid Justify="Justify.Center" Style="background-color:#daedf4" >

        <MudItem xs="5" sm="5" Style="text-align:center; margin-top:5em; margin-bottom:15em">
         
            <MudImage Src="images/logo2.jpg.jpeg" Alt="onno2" Elevation="25" Class="rounded-lg" Width="85" Height="85" />

            <MudText Typo ="Typo.h4">PC PROG</MudText>
               
            <MudText Typo="Typo.h4">login</MudText>

            <MudTextField Label="Nombre" Class="border-solid border-2 mud-border-primary pa-0 "  Required="true" RequiredError="User name is required!" Elevation="0" @bind-Value="@users.Nombre" />
           
            <MudTextField Label="Contraseña" Class="border-solid border-2 mud-border-primary pa-0" Required="true" RequiredError="User name is required!" Elevation="0" @bind-Value="@users.Contraseña" />
            <ValidationMessage For="@(() => users.Contraseña)" />

            @*<MudButton @onclick='()=>NavigateTo("/loginEmpresa")' Variant="Variant.Filled" Color="@MudBlazor.Color.Info">Siguiente</MudButton>*@
            <MudButton @onclick='()=> HandleValidSubmit()' Variant="Variant.Filled" Color="@MudBlazor.Color.Info">Siguiente</MudButton>
        </MudItem>       
</MudGrid>
</EditForm>

