@page "/loginV2"
@page "/Testlogin"
@inherits BaseForCreateOrEdit
@using System.ComponentModel.DataAnnotations
@using PrestamoBlazorApp.Pages.Login

<EditForm Model="@users">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <MudGrid Justify="Justify.Center" Style="background-color:#daedf4 ">
        <MudPaper Elevation="0" Class="pa-4" Style="height:100px; width:180px;">
            <div class="d-none d-lg-block mud-theme-tertiary rounded" style="height:100%; width:100%;"></div>
        </MudPaper>
        <MudItem xs="5" sm="5" Style="text-align:center; margin-top:15em; margin-bottom:15em">

            <MudImage Src="images/logo2.jpg.jpeg"  Alt="onno2" Elevation="25" Class="rounded-lg" Width="85" Height="85" />

            <MudText Typo="Typo.h4">PC PROG</MudText>

            <MudText Typo="Typo.h4">login</MudText>


            <MudTextField Label="Nombre de usuario" Class="border-solid border-2 mud-border-primary pa-0 " Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.People" Required="true" RequiredError=" Nombre de usuario es requerido!" Elevation="0" @bind-Value="@users.Nombre" />           
            <MudTextField Label="Contraseña" Class="border-solid border-2 mud-border-primary pa-0" Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Password" Required="true" RequiredError="User name is required!" Elevation="0" @bind-Value="@users.Contraseña" />
            <MudTextField Label="Codigo" Class="border-solid border-2 mud-border-primary pa-0 " Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Code" Required="true" RequiredError=" Codigo  es requerido!" Elevation="0" @bind-Value="@users.CodigoCompañia" />

            <ValidationMessage For="@(() => users.Contraseña)" />
          @*<MudButton @onclick='()=>NavigateTo("/loginEmpresa")' Variant="Variant.Filled" Color="@MudBlazor.Color.Info">Siguiente</MudButton>*@
            <MudButton border-solid border-2 mud-border-primary pa-4 @onclick='()=> HandleValidSubmit()' Varian t="Variant.Filled" Color="@MudBlazor.Color.Info">Siguiente</MudButton>
        </MudItem>
    </MudGrid>
</EditForm>


