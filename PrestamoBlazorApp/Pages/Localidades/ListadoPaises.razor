@page "/localidades/listadopaises"
@inherits BaseForCreateOrEdit
@using PrestamoBlazorApp.Shared.Components.Localidades
@using PrestamoBlazorApp.Shared.Components.Forms



<GeneralList OnAddClick="()=>CreateOrEdit()" CardTitle="Paises">
    <CardContent>
        <MudTable Items="localidades" Context="contextList">
            <HeaderContent>
                <MudTh>Codigo</MudTh>
                <MudTh>Nombre</MudTh>
                <MudTh>Accion</MudTh>

            </HeaderContent>
            <RowTemplate>
                <MudTd>@contextList.Codigo</MudTd>
                <MudTd>@contextList.Nombre</MudTd>
                <MudTd>
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" OnClick="()=>CreateOrEdit(contextList.IdLocalidad)" Title="Editar el pais"></MudIconButton>
                    <MudIconButton Icon="@Icons.Material.Filled.Add" OnClick="()=>ShowDialog(contextList)" Title="Agregar localidades"></MudIconButton>
                </MudTd>
            </RowTemplate>
        </MudTable>
    </CardContent>
</GeneralList>
