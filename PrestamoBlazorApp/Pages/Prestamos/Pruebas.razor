@page "/prestamos/pruebas"
@using PrestamoBlazorApp.Shared.Components.Prestamos
@inject IDialogService DialogService

<SearchPrestamoById @bind-Value="Prestamo"/>
<MudButton OnClick="ShowWtInstance">
    Show With Dialog Instance
</MudButton>
<MudChip>Prestamo: @Prestamo.PrestamoNumero | Cliente Seleccionado: @Prestamo.NombreCompleto</MudChip>
@code{
    string[] cols = { "Nombres", "Apellidos" };

    PrestamoClienteUI Prestamo { get; set; } = new PrestamoClienteUI();

    private async Task ShowWtInstance()
    {
        var parameters = new DialogParameters { ["Columns"] = cols };
        DialogOptions dialogOptions = new DialogOptions { MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = DialogService.Show<SearchPrestamoById>("Seleccionar Prestamo", parameters, dialogOptions);
        var result = await dialog.Result;

        if (!result.Cancelled)
        {
            Prestamo = (PrestamoClienteUI)result.Data;
        }
    }
}

