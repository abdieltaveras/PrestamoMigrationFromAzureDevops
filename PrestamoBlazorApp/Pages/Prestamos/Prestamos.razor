@page "/prestamos"
@inherits BaseForList

<div class="grid-container">
    <div class="bg-secondary">
        <h3 class="text-left">Listado de clientes </h3>
    </div>
    <div class="search">
        <EditForm Model="@searchPrestamos" OnValidSubmit="@GetPrestamos">


            <button type="submit" class="fa fa-search">Buscar</button>
            @if (totalPrestamos > 0)
            {
                <label class="text-right col-sm-2">registros encontrados @totalPrestamos</label>
            }
        </EditForm>

    </div>
</div>

<div class="grid">
    @if (loading)
    {
        <div class="loader">Cargando...</div>
    }
    else
    {
        if (prestamos == null)
        {
            <p><em>datos no encontrados</em></p>
        }
        else
        {
            if (totalPrestamos > 0)
            {

                <table class="table table-responsive-md table-hover table-sm">
                    <thead>
                        <tr>
                            <th>No Prestamo</th>
                            <th>Fecha</th>
                            <th>Cliente</th>
                            <th>Monto</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var prestamo in prestamos)
                        {
                            <tr>
                                <td>@prestamo.PrestamoNumero</td>
                                <td>@prestamo.FechaEmisionReal.ToString("dd/MM/yyyy")</td>
                                <td>@prestamo.IdCliente</td>
                                <td>@prestamo.MontoPrestado</td>
                                <td>
                                    <button onclick="alert('opcion no implementada aun')" title="ver detalles" class="btn btn-outline-primary">
                                        <i class="fa fa-info-circle"></i>
                                    </button>

                                    <button @onclick='()=>OnEditClick("prestamo/createoredit/"+prestamo.IdPrestamo)' class="btn btn-outline-primary">
                                        <i class="fa fa-edit"></i>
                                    </button>

                                    <button onclick="alert('opcion no implementada aun')" title="Anular o Eliminar" class="btn btn-outline-danger">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p><em>No datos encontrados</em></p>
            }
        }
    }

</div>



