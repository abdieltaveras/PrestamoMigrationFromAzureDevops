<!-- User Info navbar -->
<ul class=" navbar-right">
    <li class="nav-item dropdown open" style="padding-left: 15px;">
        <a href="javascript:;" class="@Html.Raw(AuthInSession.IsAnonimousUser ? "user-profile" : "user-profile dropdown-toggle")" aria-haspopup="true" id="navbarDropdown"
           data-toggle="dropdown" aria-expanded="true">
            <img src="@AuthInSession.GetUserImageFilePath()" alt="...">@AuthInSession.GetLoginName()
        </a>
        @{
            if (!AuthInSession.IsAnonimousUser)
            {
                <div class="dropdown-menu dropdown-usermenu pull-right" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="@Url.Action("LogOutUser", "Account")"><i class="fa fa-sign-out pull-right"></i> Cerrar sesion</a>
                </div>
            }
        }
    </li>
</ul>
<!-- User Info navbar -->