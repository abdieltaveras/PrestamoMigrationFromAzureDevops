@model PrestamoEntidades.Territorio

<div class="col-md-5 col-sm-12" id="formAgregarTasaInteres">
    <h4>Agregar localidad</h4>
    <div class="x_panel">
        <div class="x_title">
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>

                <li>
                    <a onclick="hideTasaInteresForm()"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <br />
            @using (Html.BeginForm("GuardarTerritorio", "Territorio", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
            {
                <div class="form-group row">
                    <label class="control-label col-md-3 col-sm-3 ">Tipo de direccion</label>
                    <div class="col-md-9 col-sm-9 ">
                        <select name="PadreDe" class="form-control" id="tipolocalidadeshijas">
                            <option>Elije una opcion</option>
                            @foreach (var item in ViewBag.Territorios)
                            {
                                <option value="@item.IdTipoLocalidad">
                                    <strong>@item.Descripcion</strong>
                                    @if (@item.HijoDe != null)
                                    {
                                        <span style="float:right;">
                                            ( @item.HijoDe )
                                        </span>
                                    }
                                </option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label" for="codigo">
                        Nombre <span class="required">*</span>
                    </label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(Model => Model.Descripcion, new { @class = "form-control", @required = "required" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-3">Autorizacion</div>
                    <div class="col-sm-9">
                        <div class="form-check">
                            @Html.CheckBoxFor(Model => Model.PermiteCalle, new { @class = "form-check-input" })
                            <label class="form-check-label" for="gridCheck1">
                                ¿Permite calle?
                            </label>
                        </div>
                    </div>
                </div>

