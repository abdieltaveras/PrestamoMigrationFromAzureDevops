@model ClienteModel

<div class="clearfix"></div>
<div class="row">
    <!-- form input mask -->
    <div class="col-md-12 col-sm-12">
        <div class="x_panel">
            <h2>Informacion de referencias</h2>
            <hr />
            <div class="alert alert-danger" id="alert" role="alert" style="display:none">
                Debe registrar un minimo de 3 referencias al cliente.
            </div>
            <div class="x_content">
                @{
                    for (int i = 0; i < Model.redesSociales.Count; i++)
                    {
                        <div class="row">
                            <div class="shadow p-3 bg-light rounded">
                                <div class="form-group col-md-3">
                                    @Html.LabelFor(m => m.redesSociales[i].Tipo)
                                    @Html.DropDownListFor(m => m.Referencias[i].Tipo, SelectItems.EnumRedesSociales(), new { @class = "form-control", data_val = false })

                                </div>



                                <div class="@HtmlClass.FormGroupCls col-md-5">
                                    @Html.LabelFor(m => m.redesSociales[i].NombreUsuario)
                                    @Html.EditorFor(m => m.redesSociales[i].NombreUsuario, new { htmlAttributes = new { @class = "form-control" } })
                                </div>

                                <div class="form-group col-md-8">
                                        @Html.LabelFor(m => m.redesSociales[i].PerfilUrl)
                                        @Html.EditorFor(model => model.redesSociales[i].PerfilUrl, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>

                            </div>

                        </div>
                        <hr />

                        }
                    }
               </div>
            </div>
        </div>
    </div>
