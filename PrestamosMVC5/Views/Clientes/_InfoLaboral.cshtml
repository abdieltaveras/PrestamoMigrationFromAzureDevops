                        @Html.EditorFor(model => model.InfoLaboral.NoTelefono2, new { htmlAttributes = new { @class = "form-control", @data_tel="true" } })
                        @Html.ValidationMessageFor(model => model.InfoLaboral.NoTelefono2, "", new { @class = "text-danger" })
                        <span class="@HtmlClass.SpanfaphoneCls" aria-hidden="true"></</span>
                    </div>
                </div>

                <div class="@HtmlClass.FormGroupCls">
                    @Html.LabelFor(model => model.InfoLaboral.Direccion, htmlAttributes: new { @class = @HtmlClass.LabelCls })
                    <div class="@HtmlClass.DivInputCls">
                        @Html.EditorFor(model => model.InfoLaboral.Direccion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.InfoLaboral.Direccion, "", new { @class = "text-danger" })
                        <span class="@HtmlClass.SpanAddressDetailCls" aria-hidden="true"></</span>
                    </div>
                </div>

                <div class="@HtmlClass.FormGroupCls">
                    @Html.LabelFor(model => model.InfoLaboral.Notas, htmlAttributes: new { @class = @HtmlClass.LabelCls })
                    <div class="@HtmlClass.DivInputCls">
                        @Html.TextAreaFor(m => Model.InfoLaboral.Notas, htmlAttributes: new { @class = @HtmlClass.TextAreaResizableCls })
                        @*<textarea id="InfoLaboral_Notas" name="InfoLaboral.Notas" class="@HtmlClass.TextAreaResizableCls">@Model.InfoLaboral.Notas </textarea>*@
                        @Html.ValidationMessageFor(model => model.InfoLaboral.Notas, "", new { @class = "text-danger" })
                        <span class="@HtmlClass.SpanDetailsCls" aria-hidden="true"></</span>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
