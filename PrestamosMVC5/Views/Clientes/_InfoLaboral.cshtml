@model ClienteModel

<div class="clearfix"></div>
<div class="row">
    <!-- form input mask -->
    <div class="col-md-6 col-sm-12  ">
        <div class="x_panel">
            <h2>Informacion laboral</h2>
            <hr />
            <div class="x_content">
                <br />
                @*<form class="form-horizontal form-label-left">*@
                <div class="@HtmlClass.FormGroupCls">
                    @Html.LabelFor(model => model.InfoLaboral.Nombre, htmlAttributes: new { @class = @HtmlClass.LabelCls })
                    <div class="@HtmlClass.DivInputCls">
                        @Html.EditorFor(model => model.InfoLaboral.Nombre, new { htmlAttributes = new { @class = "form-control" } })

                        @Html.ValidationMessageFor(model => model.InfoLaboral.Nombre, "", new { @class = "text-danger" })
                        <span class="@HtmlClass.SpanWorkInfoCls" aria-hidden="true"></</span>
                    </div>
                </div>

                <div class="@HtmlClass.FormGroupCls">
                    @Html.LabelFor(model => model.InfoLaboral.Puesto, htmlAttributes: new { @class = @HtmlClass.LabelCls })
                    <div class="@HtmlClass.DivInputCls">
                        @Html.EditorFor(model => model.InfoLaboral.Puesto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.InfoLaboral.Puesto, "", new { @class = "text-danger" })
                        <span class="@HtmlClass.SpanfauserCls" aria-hidden="true"></</span>
                    </div>
                </div>

                <div class="@HtmlClass.FormGroupCls">
                    @Html.LabelFor(model => model.InfoLaboral.FechaInicio, htmlAttributes: new { @class = @HtmlClass.LabelCls })
                    <div class="@HtmlClass.DivInputCls">
                        @Html.EditorFor(model => model.InfoLaboral.FechaInicio, new { htmlAttributes = new { @class = "form-control datetype", type = "text" } })
                        @*@Html.ValidationMessageFor(model => model.InfoLaboral.FechaInicio, "", new { @class = "text-danger" })*@
                    </div>
                </div>

                <div class="@HtmlClass.FormGroupCls">
                    @Html.LabelFor(model => model.InfoLaboral.NoTelefono1, htmlAttributes: new { @class = @HtmlClass.LabelCls })
                    <div class="@HtmlClass.DivInputCls">
                        @Html.EditorFor(model => model.InfoLaboral.NoTelefono1, new { htmlAttributes = new { @class = "form-control", @data_tel = "true" } })
                        @Html.ValidationMessageFor(model => model.InfoLaboral.NoTelefono1, "", new { @class = "text-danger" })
                        <span class="@HtmlClass.SpanfaphoneCls" aria-hidden="true"></</span>
                    </div>
                </div>

                <div class="@HtmlClass.FormGroupCls">
                    @Html.LabelFor(model => model.InfoLaboral.NoTelefono2, htmlAttributes: new { @class = @HtmlClass.LabelCls })
