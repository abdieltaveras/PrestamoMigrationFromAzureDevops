        <div class="x_panel">
            <div class="x_content">
                <div class="@HtmlClass.FormGroupCls">
                    @Html.LabelFor(model => model.Cliente.FechaNacimiento, htmlAttributes: new { @class = @HtmlClass.LabelCls, @type = "date" })
                    <div class="@HtmlClass.DivInputCls">
