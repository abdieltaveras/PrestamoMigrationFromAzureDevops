@model ModeloVM

<div class="row">

    <div id="listContainer" class="col-md-6 col-sm-12 col-xs-12">

        @*<button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-lg" style="float:right;">Agregar modal</button>*@
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".modal-marcas" style="float:right;">Agregar <i class="fa fa-plus"></i></button>

        <div class="x_panel">
            <div class="x_title">
                <h2>Tabla de modelos</h2>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table class="table bulk_action ">
                    <thead>
                        <tr>
                            <th>Marca</th>
                            <th>Modelo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.ListaModelos)
                        {
                        <tr>
                            <td>
                                <strong>
                                    @item.NombreMarca
                                </strong>
                            </td>
                            <td>
                                <strong>
                                    @item.Nombre
                                </strong>
                            </td>

                            <td>
                                @*<a href="@Url.Action("Delete", "TasaInteres", new { Id = item.idTasaInteres, Usuario = "Bryan" })">
                <button type="button" class="btn btn-outline-danger">
                    <i class="fa fa-trash"></i>
                </button>
            </a>*@
                                <a href="#">
                                    <button class="btn btn-outline-warning">
                                        <i class="fa fa-edit"></i>
                                    </button>
                                </a>
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @* Formulario para agregar tasas de interes *@


    @* Fin de formulario para agregar tasas de interes *@
</div>

@*Modal de agregar Modelos*@
<div class="modal fade modal-marcas" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>*@
                <h4 class="modal-title" id="myModalLabel2">Agrega modelo</h4>
            </div>
            <div class="modal-body">

                @*form*@

                <div class="col-sm-12" id="formAgregarTasaInteres">

                    <div class="x_panel">

                        <div class="x_content">
                            <br />
                            @using (Html.BeginForm("CreateOrEdit", "Modelos", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
                            {

                                <div class="@HtmlClass.FormGroupCls">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-3" for="nombre">
                                        Marca <span class="required">*</span>
                                    </label>
                                    <div class="@HtmlClass.DivInputCls">
                                        @Html.DropDownListFor(model => model.Modelo.IdMarca, Model.ListaSeleccionMarcas, htmlAttributes: new { @class = @HtmlClass.InputTextCls })
                                        @*@Html.ValidationMessageFor(model => model.Cliente.EstadoCivil, "", new { @class = "text-danger" })*@
                                    </div>
                                </div>
                                
                                <div class="form-group row">
                                    <label class="@HtmlClass.LabelCls" for="nombre">
                                        Nombre <span class="required">*</span>
                                    </label>
                                    <div class="@HtmlClass.DivInputCls">
                                        @Html.EditorFor(model => model.Modelo.Nombre, new { htmlAttributes = new { @class = @HtmlClass.InputTextCls } })
                                    </div>
                                </div>



                                <div class="ln_solid"></div>
                                <div class="item form-group" style="float: right;">
                                    <div class="col-md-6 col-sm-6 offset-md-3">
                                        <button type="submit" class="btn btn-primary">Guardar</button>
                                    </div>
                                </div>
                                @*</form>*@
                            }
                        </div>
                    </div>
                </div>

                @*form*@



            </div>
        </div>
    </div>
</div>
