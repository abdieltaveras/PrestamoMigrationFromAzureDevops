@*Modal de agregar Modelos*@
<div class="modal fade modal-modelos" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel2">Agrega modelo</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">

                @*form*@

                <div class="col-sm-12" id="formAgregarTasaInteres">

                    <div class="x_panel">

                        <div class="x_content">
                            <br />
                            @using (Html.BeginForm("CreateOrEdit", "Modelos", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
                            {

                                <div class="@HtmlClass.FormGroupCls">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-3" for="nombre">
                                        Marca <span class="required">*</span>
                                    </label>
                                    <div class="@HtmlClass.DivInputCls">
                                        @Html.DropDownListFor(model => model.Modelo.IdMarca, Model.ListaSeleccionMarcas, htmlAttributes: new { @class = @HtmlClass.InputTextCls })
                                        @*@Html.ValidationMessageFor(model => model.Cliente.EstadoCivil, "", new { @class = "text-danger" })*@
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="@HtmlClass.LabelCls" for="nombre">
                                        Nombre <span class="required">*</span>
                                    </label>
                                    <div class="@HtmlClass.DivInputCls">
                                        @Html.EditorFor(model => model.Modelo.Nombre, new { htmlAttributes = new { @class = @HtmlClass.InputTextCls } })
                                    </div>
                                </div>



                                <div class="ln_solid"></div>
                                <div class="item form-group" style="float: right;">
                                    <div class="col-md-6 col-sm-6 offset-md-3">
                                        <button type="submit" class="btn btn-primary">Guardar</button>
                                    </div>
                                </div>
                                @*</form>*@
                            }
                        </div>
                    </div>
                </div>

                @*form*@



            </div>
        </div>
    </div>
</div>

