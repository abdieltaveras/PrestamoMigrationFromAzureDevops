
@{
    ViewBag.Title = "Customize Input File1";
    //Layout = null;
}
@section pageStyle
{
    <style>
        .inputfile-box {
            position: relative;
        }

        .inputfile {
            display: none;
        }

        .container {
            display: inline-block;
            width: 100%;
        }

        .file-box {
            display: inline-block;
            width: 100%;
            border: 1px solid;
            padding: 5px 0px 5px 5px;
            box-sizing: border-box;
            height: calc(2rem - 2px);
        }

        .file-button {
            background: red;
            padding: 5px;
            position: absolute;
            border: 1px solid;
            top: 0px;
            right: 0px;
        }
    </style>
}
<body>
    <h2>CustomizeInputFile1</h2>
    <div class="@HtmlClass.DivInputCls inputfile-box">
        <input type="file" id="file" class=" inputfile" onchange='uploadFile(this)'>
        <label class="@HtmlClass.LabelCls" for="file">
            <span id="file-name" class="file-box"></span>
            <span class="file-button">
                <i class="fa fa-upload" aria-hidden="true"></i>
                Select File
            </span>
        </label>
    </div>
    <script>
        function uploadFile(target) {
            document.getElementById("file-name").innerHTML = target.files[0].name;
        }
    </script>
</body>
</html>