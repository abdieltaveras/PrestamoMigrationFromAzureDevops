@*@model IEnumerable<PrestamoEntidades.TasaInteres>*@
@model PrestamoEntidades.TasaInteres

<div class="col-md-6 col-sm-6 col-xs-12">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-lg" style="float:right;">Agregar</button>
    <div class="x_panel">
        <div class="x_title">
            @*<button type="button" class="btn btn-primary btn-right" style="float:right;">Agregar</button>*@

            <h2>Tabla de intereses</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                @*<li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="#">Settings 1</a>
                            <a class="dropdown-item" href="#">Settings 2</a>
                        </div>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>*@
                <li>
                    <a data-toggle="modal" data-target=".bs-example-modal-lg"><i class="fa fa-plus"></i></a>
                </li>

            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table class="table">
                <thead>
                    <tr>
                        <th>Codigo</th>
                        <th>% de interes</th>
                        <th>Estado</th>
                        <th>¿Autorizacion?</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in @ViewBag.listaInteres)
                    {
                    <tr>
                        <td>
                            <strong>
                                @item.Codigo
                            </strong>
                        </td>
                        <td>
                            <strong>
                                @item.InteresMensual
                            </strong>
                        </td>
                        <td>
                            @if (item.Activo)
                            {
                                <span class="badge badge-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Desactivado</span>
                            }

                        </td>
                        <td>
                            @if (item.RequiereAutorizacion)
                            {
                                <span class="badge badge-primary">Si</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">No</span>
                            }
                        </td>
                        <td>                            
                            <a href="@Url.Action("Delete", "TasaInteres", new { Id = item.idTasaInteres, Usuario = "Bryan" })">
                                <button type="button" class="btn btn-outline-danger">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </a>
                        </td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

