@*@model IEnumerable<PrestamoEntidades.TasaInteres>*@
@model TasaInteresVM
    <link href="../vendors/iCheck/skins/flat/green.css" rel="stylesheet">
    <div class="row">

        <div id="listContainer" class="col-md-12 col-sm-12 col-xs-12">

            @*<button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-lg" style="float:right;">Agregar modal</button>*@
            <button type="button" data-toggle="modal" data-target=".modal-tasa-interes" class="btn btn-primary" id="btnFormTasaInteres" onclick="showTasaInteresForm()" style="float:right;">Agregar</button>
            <h4>Listado de intereses</h4>
            <div class="x_panel">
                <div class="x_title">
                    <h2>Tabla de intereses</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table class="table bulk_action ">
                        <thead>
                            <tr>
                                <th>Codigo</th>
                                <th>% de interes</th>
                                <th>Descripcion</th>
                                <th>Estado</th>
                                <th>¿Autorizacion?</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.ListaTasaInteres)
                            {
                            <tr>
                                <td>
                                    <strong>
                                        @item.Codigo
                                    </strong>
                                </td>
                                <td>
                                    <span>@item.InteresMensual%</span>
                                </td>
                                <td>
                                    <span>@item.Descripcion</span>
                                </td>
                                <td>
                                    @if (item.Activo)
                                    {
                                        <span class="badge badge-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">Desactivado</span>
                                    }
                                </td>
                                <td>
                                    @if (item.RequiereAutorizacion)
                                    {
                                        <span class="badge badge-primary">Si</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">No</span>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("Delete", "TasaInteres", new { Id = item.idTasaInteres, Usuario = "Bryan" })">
                                        <button type="button" class="btn btn-outline-danger">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </a>
                                    <a href="#">
                                        <button type="button" class="btn btn-outline-warning">
                                            <i class="fa fa-edit"></i>
                                        </button>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

@*Modal de agregar intereses*@
<div class="modal fade modal-tasa-interes" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>*@
                <h4 class="modal-title" id="myModalLabel2">Agrega un interes a la lista</h4>
            </div>
            <div class="modal-body">

                <div class="x_panel">
                    <div class="x_title">
                        @*<h2>Form Design <small>different form elements</small></h2>*@
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>

                            <li>
                                <a onclick="hideTasaInteresForm()"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        @using (Html.BeginForm("Index", "TasaInteres", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
                        {

                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label" for="codigo">
                                    Codigo <span class="required">*</span>
                                </label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(Model => Model.TasaInteres.Codigo, new { @class = "form-control", @required = "required" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label" for="interes">
                                    % de Interes <span class="required">*</span>
                                </label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(Model => Model.TasaInteres.InteresMensual, new { @class = "form-control", @required = "required" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label" for="descripcion">
                                    Descripcion <span class="required">*</span>
                                </label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(Model => Model.TasaInteres.Descripcion, new { @class = "form-control", @required = "required" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-4">Autorizacion</div>
                                <div class="col-sm-8">
                                    <div class="form-check">
                                        @*<input class="form-check-input" type="checkbox" id="gridCheck1">*@
                                        @Html.CheckBoxFor(Model => Model.TasaInteres.RequiereAutorizacion, new { @class = "form-check-input" })
                                        <label class="form-check-label" for="gridCheck1">
                                            ¿Requiere autorizacion?
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="ln_solid"></div>
                            <div class="item form-group" style="float: right;">
                                <div class="col-md-6 col-sm-6 offset-md-3">
                                    <button type="submit" class="btn btn-primary">Guardar</button>
                                </div>
                            </div>
                            @*</form>*@
                        }
                    </div>
                </div>



            </div>
        </div>
    </div>
</div>

   
