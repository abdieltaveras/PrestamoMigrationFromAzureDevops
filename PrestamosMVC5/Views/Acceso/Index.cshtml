@model Role

<div class="row">

    <div id="listContainer" class="col-md-12 col-sm-12 col-xs-12">

        @*<button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-lg" style="float:right;">Agregar modal</button>*@
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".modal-catalogo" style="float:right;">Agregar <i class="fa fa-plus"></i></button>

        <div class="x_panel">
            <div class="x_title">
                <h2>Tabla de permisos por roles de usuario</h2>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table class="table bulk_action ">
                    <thead>
                        <tr>
                            <th>Codigo</th>
                            <th>Nombre</th>
                            <th>Descripcion</th>
                            <th>Ver</th>
                            <th>Crear</th>
                            <th>Modificar</th>
                            <th>Anular</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.Permisos)
                        {
                        <tr>
                            <td>
                                <strong>
                                    @item.Codigo
                                </strong>
                            </td>
                            <td>
                                <strong>
                                    @item.Nombre
                                </strong>
                            </td>
                            <td>
                                <strong>
                                    @item.Descripcion
                                </strong>
                            </td>
                            <td>
                                @if (item.Nivel == 1)
                                {
                                    <strong>*</strong>
                                }
                            </td>
                            <td>
                                @if (item.Nivel == 2)
                                {
                                    <strong>*</strong>
                                }
                            </td>
                            <td>
                                @if (item.Nivel == 3)
                                {
                                    <strong>*</strong>
                                }
                            </td>
                            <td>
                                @if (item.Nivel == 4)
                                {
                                    <strong>*</strong>
                                }
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>

            </div>
        </div>
    </div>

    @* Formulario para agregar tasas de interes *@


    @* Fin de formulario para agregar tasas de interes *@
</div>

