@model RoleVM
<link href="~/Content/customcss/switch.css" rel="stylesheet">

<style>
</style>

<div class="row">

    <div id="listContainer" class="col-md-12 col-sm-12 col-xs-12">

        @*<button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-lg" style="float:right;">Agregar modal</button>*@
        @*<button type="button" data-toggle="modal" data-target=".modal-tasa-interes" class="btn btn-primary" id="btnFormTasaInteres" onclick="showTasaInteresForm()" style="float:right;">Agregar <i class="fa fa-plus"></i></button>*@

        <h4>Tabla de roles</h4>
        <div class="x_panel">
            
            <div class="x_content">
                <table id="datatable" class="table-bordered row-border" >
                    <thead>
                        <tr>
                            <th class="checkColumn"></th>
                            <th>Nombre</th>
                            <th>Descripcion</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.ListaRoles)
                        {
                            <tr
                                data-id="@item.IdRole">
                                <td></td>
                                <td>
                                    <span>@item.Nombre</span>
                                </td>
                                <td>
                                    @item.Descripcion
                                </td>

                                @*<td>
                                    <a href="#">
                                        <button type="button" class="btn btn-outline-danger">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </a>
                                    <a href="@Url.Action("Edit", "Roles", new { Id = item.IdRole })">
                                        <button type="button" class="btn btn-outline-warning">
                                            <i class="fa fa-edit"></i>
                                        </button>
                                    </a>
                                </td>*@
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@*Modal de agregar intereses*@
<div class="modal fade modal-roles" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>*@
                <h4 class="modal-title" id="myModalLabel2">Agrega un interes a la lista</h4>
            </div>
            <div class="modal-body">

                <div class="x_panel">
                    <div class="x_title">

                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        @using (Html.BeginForm("Index", "TasaInteres", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
                        {
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label" for="codigo">
                                    Nombre <span class="required">*</span>
                                </label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(Model => Model.Role.Nombre, new { @class = "form-control", @required = "required" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label" for="interes">
                                    Descripcion <span class="required">*</span>
                                </label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(Model => Model.Role.Descripcion, new { @class = "form-control", @required = "required" })
                                </div>
                            </div>                            

                            <div class="ln_solid"></div>
                            <div class="item form-group" style="float: right;">
                                <div class="col-md-6 col-sm-6 offset-md-3">
                                    <button type="submit" class="btn btn-primary">Guardar</button>
                                </div>
                            </div>
                            @*</form>*@
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

