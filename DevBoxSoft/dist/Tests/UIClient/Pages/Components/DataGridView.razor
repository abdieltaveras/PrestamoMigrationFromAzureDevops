<MudElement>
    <MudToolBar>
        <MudToolBarSpacer />
        @foreach (var btn in toolbarButtons)
        {
            <MudButton Class="mr-3" 
                       OnClick="@(()=>btn.OnClick(selectedItem))"
                       Variant="Variant.Filled" 
                       StartIcon="@btn.Icon" 
                       Color="@btn.Color" 
                       Disabled="@(!btn.IsEnabled(selectedItem))">@btn.Text
            </MudButton>
        }
    </MudToolBar>

    <MudTable Items="@objectList" MultiSelection="@allowMultiSelection" Outlined="@outlined" Dense="@dense" Hover="@hover" Bordered="@bordered" Striped="@striped" @bind-SelectedItem="selectedItem" @bind-SelectedItems="selectedItems" >
        <ToolBarContent>
            <MudText Typo="Typo.h6">@title</MudText>
            <MudToolBarSpacer />
            <MudTextField @bind-Value="searchString" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
        </ToolBarContent>
        <HeaderContent>
            @foreach (var col in columns)
            {
                <MudTh>@col.Header</MudTh>
            }
        </HeaderContent>
        <RowTemplate>
            @foreach (var col in columns)
            {
                <MudTd DataLabel="@col.Header"><MudHighlighter Text="@getText(context, col)" HighlightedText="@searchString" /></MudTd>
            }
        </RowTemplate>
        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>
    <div class="d-flex flex-wrap mt-4">
        <MudText Inline="true" Class="align-self-center" Style="min-width:200px;">Selección: @selectedItem?.ToString()</MudText>
    </div>
</MudElement>