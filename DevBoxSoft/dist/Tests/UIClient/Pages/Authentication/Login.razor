@*@page "/"*@
@page "/pages/authentication/login"
@layout LoginLayout

<MudText Typo="Typo.h4" GutterBottom="true">Sign In</MudText>

<MudTextField T="string" @bind-Value="@Usuario" Label="Usuario" Variant="Variant.Outlined" Class="my-6"></MudTextField>

<MudTextField @bind-Value="@Password" Label="Contraseña" Variant="Variant.Outlined" InputType="@PasswordInput" Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon" OnAdornmentClick="TogglePasswordVisibility" />

<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="OnSingInClick" Size="Size.Large" FullWidth="true">Sign In</MudButton>
