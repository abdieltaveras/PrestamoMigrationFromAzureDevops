<CascadingAuthenticationState>
    <Router AppAssembly="typeof(Program).Assembly" Context="routeData" AdditionalAssemblies="@AssemblyManager.AdditionalAssemblies">
        <Found>
            <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(MainLayout)">
                <NotAuthorized>
                    <h1>Access denied</h1>
                    <p>Only logged-in mission commanders may access this area.</p>
                    <MudLink Href="/pages/authentication/login">LogIn</MudLink>
                </NotAuthorized>
                <Authorizing>
                    Wait...
                </Authorizing>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <p>Sorry, there's nothing at this address.</p>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
