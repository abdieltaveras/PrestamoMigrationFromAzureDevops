@page "/pages/authentication/reset-password/{guid}"
@layout LoginLayout

<MudText Typo="Typo.h4" GutterBottom="true">Cambio de contraseña</MudText>

<MudTextField @bind-Value="@Password" Label="Nueva Contraseña" Variant="Variant.Outlined" InputType="@PasswordInput" Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon" OnAdornmentClick="TogglePasswordVisibility" Class="my-4" />

<MudButton OnClick="Submmit" Variant="Variant.Filled" Color="Color.Primary"  Size="Size.Large" FullWidth="true" Class="mt-2">Cambiar</MudButton>

