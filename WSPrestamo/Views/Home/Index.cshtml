<div>
    @{
        string Baseurl = RequestInfo.GetBaseUrl();
        string getRequest = "get    :" + Baseurl + "api/color/get?idColor=-1";
        string postRequest = "post   :" + Baseurl + "api/color/post";
        string deleteRequest = "delete :" + Baseurl + "api/color/delete?idColor=3";

        string testUrl = "test request " + Baseurl + "api/values/get";
    }

    <pre class="text-info">
    <h2>modelos de request</h2>
    <h4 class="mt-0">
        @getRequest
        @postRequest
        @deleteRequest
        @testUrl
    </h4>
    </pre>
</div>
